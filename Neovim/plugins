#!/bin/sh

#################
# Prerequisites #
#################

# Check if Git is installed
command -v git >/dev/null 2>&1
if [ ! $? -eq 0 ]; then
        echo "Git must be installed to run this script. Aborting."
        exit 1
fi

###############################
# Load missing Neovim plugins #
###############################

NVIM_PLUGINS=~/.config/nvim/bundle

# Ack
if [ ! -d $NVIM_PLUGINS/ack ]; then
        git clone git://github.com/mileszs/ack.vim $NVIM_PLUGINS/ack
fi

# CtrlP
if [ ! -d $NVIM_PLUGINS/ctrlp ]; then
        git clone git://github.com/ctrlpvim/ctrlp.vim $NVIM_PLUGINS/ctrlp
fi

# GitGutter
if [ ! -d $NVIM_PLUGINS/gitgutter ]; then
        git clone git://github.com/airblade/vim-gitgutter $NVIM_PLUGINS/vim-gitgutter
fi

# Mundo
if [ ! -d $NVIM_PLUGINS/vim-mundo ]; then
        git clone git://github.com/simnalamburt/vim-mundo $NVIM_PLUGINS/vim-mundo
fi

if [ ! -d $NVIM_PLUGINS/vim-polyglot ]; then
        git clone git://github.com/vim-polyglot $NVIM_PLUGINS/vim-polyglot
fi

# Solarized Color Scheme
if [ ! -d $NVIM_PLUGINS/vim-colors-solarized ]; then
        git clone git://github.com/altercation/vim-colors-solarized.git $NVIM_PLUGINS/vim-colors-solarized
fi
